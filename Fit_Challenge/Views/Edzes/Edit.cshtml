@model Fit_Challenge.Edze

@{
    ViewData["Title"] = "Edit";
}

<h1>Szerkesztés</h1>

<h4>Frissítsd az edzésed adatait!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EdzesId" />
            <div class="form-group">
                <label asp-for="SportAg" class="control-label">SportÁg</label>
                <input asp-for="SportAg" class="form-control" />
                <span asp-validation-for="SportAg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportFajta" class="control-label">SportFajta</label>
                <input asp-for="SportFajta" class="form-control" />
                <span asp-validation-for="SportFajta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leiras" class="control-label">Leírás</label>
                <input asp-for="Leiras" class="form-control" />
                <span asp-validation-for="Leiras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label">Dátum</label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KezdIdopont" class="control-label">Az edzés kezdésének időpontja</label>
                <input asp-for="KezdIdopont" class="form-control" />
                <span asp-validation-for="KezdIdopont" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VegIdopont" class="control-label">Az edzés végének időpontja</label>
                <input asp-for="VegIdopont" class="form-control" />
                <span asp-validation-for="VegIdopont" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElvegzettE" class="control-label">Elvégezeted már ez edzést?</label>
                <input asp-for="ElvegzettE" class="form-control" />
                <span asp-validation-for="ElvegzettE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KotelezoE" class="control-label">Kötelező edzés?</label>
                <input asp-for="KotelezoE" class="form-control" />
                <span asp-validation-for="KotelezoE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a menübe</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
