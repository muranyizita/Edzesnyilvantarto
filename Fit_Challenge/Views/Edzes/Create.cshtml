@model Fit_Challenge.Edze

@{
    ViewData["Title"] = "Create";
}

<h1>Új edzés hozzáadása</h1>


<img src="/Images/edzes.jpg" width="450" height="450"/>



<h4>Add meg az edzés adatait!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SportAg" class="control-label">Sportág</label>
                <select asp-for="SportAg">
                    <option value="erőnléti">Erőnléti sport</option>
                    <option value="ütős">Ütős sport</option>
                    <option value="gimnasztika">Gimnasztikus sport</option>
                    <option value="vízi">Vízi Sport</option>
                    <option value="labdajáték">Labdajáték</option>
            </select><br />                
            <span asp-validation-for="SportAg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportFajta" class="control-label">Sporttípus</label>
                <select asp-for="SportFajta">
                    <option value="súlyemeles">Súlyemelés</option>
                    <option value="kötélhúzás">Kötélhúzás</option>
                    <option value="karate">Karate</option>
                    <option value="kungfu">Kungfu</option>
                    <option value="gimnasztika">Gimnasztika</option>
                    <option value="szertorna">Szertorna</option>
                    <option value="vizilabda">Vízilabda</option>
                    <option value="szinkronúszas">Szinkronúszás</option>
                    <option value="kosárlabda">Kosárlabda</option>
                    <option value="röplabda">Röplabda</option>
                </select><br />
                <span asp-validation-for="SportFajta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leiras" class="control-label">Leírás</label>
                <input asp-for="Leiras" class="form-control" />
                <span asp-validation-for="Leiras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label">Dátum</label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KezdIdopont" class="control-label">Az edzés kezdete</label>
                <input type="time" asp-for="KezdIdopont" class="form-control" />
                <span asp-validation-for="KezdIdopont" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VegIdopont" class="control-label">Az edzés vége</label>
                <input type="time" asp-for="VegIdopont" class="form-control" />
                <span asp-validation-for="VegIdopont" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElvegzettE" class="control-label">Elvégezted már?</label>
                <input type="checkbox" asp-for="ElvegzettE" class="form-control" />
                <span asp-validation-for="ElvegzettE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KotelezoE" class="control-label">Kötelező egyetemi óra?</label>
                <input type="checkbox" asp-for="KotelezoE" class="form-control" />
                <span asp-validation-for="KotelezoE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Hozzáadás" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Visszatérés az Edzés menüre</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
